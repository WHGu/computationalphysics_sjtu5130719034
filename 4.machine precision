#include<stdio.h>
#include<math.h>


int main()
{
    int i = 1;
    int n = 1;
    float a = 1;
    double b = 1;
    float s = 2;
    double f = 2;

    while (s > 1.0)
    {
        a = a/2;
        s = 1+a;
        i = i+1;
    }
     printf(" single precision = %g,\n i=%i\n",a,i);

     while (f > 1.0)
    {
        b = b/2;
        f = 1+b;
        n = n+1;
    }
     printf(" double precision = %g,\n i=%i\n",b,n);
}
